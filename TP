-- Tapping Simulator Script - Aurora Theme
-- By Duckie - 2026

local Library = loadstring(game:HttpGetAsync("https://github.com/ActualMasterOogway/Fluent-Renewed/releases/latest/download/Fluent.luau"))()

local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local LocalPlayer = Players.LocalPlayer

local autoTapEnabled = false
local autoRebirthEnabled = false
local autoEggEnabled = false
local autoUpgradeEnabled = false
local autoClaimDailyEnabled = false
local selectedEgg = "Basic Egg"
local selectedWorld = "Flower World"

local function getRemoteFolder()
    return ReplicatedStorage:FindFirstChild("73bd9f38-0e90-4df4-bdd9-dfc8d55ec1e1")
end

local function getEvent(index)
    local folder = getRemoteFolder()
    if folder and folder:FindFirstChild("Events") then
        local events = folder.Events:GetChildren()
        return events[index]
    end
    return nil
end

local Window = Library:Window({
    Title = "üåå Tapping Simulator",
    SubTitle = "Aurora Hub - By Duckie",
    TabWidth = 160,
    Size = UDim2.fromOffset(580, 460),
    Resize = false,
    Acrylic = true,
    Theme = "Amethyst",
    MinimizeKey = Enum.KeyCode.LeftControl
})

local Tabs = {
    Farm = Window:AddTab({ Title = "‚ö° Auto Farm", Icon = "zap" }),
    Eggs = Window:AddTab({ Title = "ü•ö Eggs & Pets", Icon = "egg" }),
    Upgrades = Window:AddTab({ Title = "‚¨ÜÔ∏è Upgrades", Icon = "trending-up" }),
    Worlds = Window:AddTab({ Title = "üåç Worlds", Icon = "globe" }),
    Misc = Window:AddTab({ Title = "‚öôÔ∏è Misc", Icon = "settings" })
}

local FarmSection = Tabs.Farm:AddSection("Main Farming")

FarmSection:Toggle("AutoTap", {
    Title = "Auto Tap",
    Description = "Automatically clicks for you at max speed",
    Default = false,
    Callback = function(Value)
        autoTapEnabled = Value
        if Value then
            task.spawn(function()
                while autoTapEnabled do
                    local success = pcall(function()
                        local event = getEvent(19)
                        if event then
                            event:FireServer(true, nil, false)
                        end
                    end)
                    task.wait(0.00001)
                end
            end)
        end
    end
})

FarmSection:Toggle("AutoRebirth", {
    Title = "Auto Rebirth",
    Description = "Automatically rebirths when possible",
    Default = false,
    Callback = function(Value)
        autoRebirthEnabled = Value
        if Value then
            task.spawn(function()
                while autoRebirthEnabled do
                    pcall(function()
                        local event = getEvent(1)
                        if event then
                            event:FireServer()
                        end
                    end)
                    task.wait(1)
                end
            end)
        end
    end
})

local StatsSection = Tabs.Farm:AddSection("Stats Display")

local clicksLabel = StatsSection:AddParagraph({
    Title = "Clicks",
    Content = "Loading..."
})

local rebirthsLabel = StatsSection:AddParagraph({
    Title = "Rebirths",
    Content = "Loading..."
})

task.spawn(function()
    while task.wait(1) do
        pcall(function()
            local playerGui = LocalPlayer:FindFirstChild("PlayerGui")
            if playerGui then
                local mainUI = playerGui:FindFirstChild("Main")
                if mainUI then
                    local clicksFrame = mainUI:FindFirstChild("Clicks")
                    local rebirthsFrame = mainUI:FindFirstChild("Rebirths")

                    if clicksFrame then
                        local text = clicksFrame:FindFirstChildOfClass("TextLabel")
                        if text then
                            clicksLabel:SetDesc(text.Text or "0")
                        end
                    end

                    if rebirthsFrame then
                        local text = rebirthsFrame:FindFirstChildOfClass("TextLabel")
                        if text then
                            rebirthsLabel:SetDesc(text.Text or "0")
                        end
                    end
                end
            end
        end)
    end
end)

local EggsSection = Tabs.Eggs:AddSection("Auto Hatch Eggs")

local eggOptions = {
    "Basic Egg",
    "Flower Egg",
    "Beach Egg",
    "Desert Egg",
    "Space Egg",
    "Candy Egg",
    "Lava Egg",
    "Snow Egg",
    "Fantasy Egg",
    "Void Egg",
    "Alien Egg",
    "Galaxy Egg",
    "Heaven Egg"
}

EggsSection:Dropdown("SelectEgg", {
    Title = "Select Egg",
    Values = eggOptions,
    Multi = false,
    Default = 1,
    Callback = function(Value)
        selectedEgg = Value
    end
})

EggsSection:Toggle("AutoHatchEgg", {
    Title = "Auto Hatch Eggs",
    Description = "Automatically hatches selected egg (single)",
    Default = false,
    Callback = function(Value)
        autoEggEnabled = Value
        if Value then
            task.spawn(function()
                while autoEggEnabled do
                    pcall(function()
                        local event = getEvent(10)
                        if event then
                            event:FireServer(selectedEgg, 1)
                        end
                    end)
                    task.wait(0.1)
                end
            end)
        end
    end
})

local PetSection = Tabs.Eggs:AddSection("Pet Management")

PetSection:Button({
    Title = "Equip Best Pets",
