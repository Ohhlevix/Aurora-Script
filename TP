            end
        end)
    end
})

local CodesSection = Tabs.Misc:AddSection("Redeem Codes")

local workingCodes = {
    "90M", "85M", "80M", "75M", "70M", "65M", "60M", "55M", "50M", "45M", "40M", "35M", "30M",
    "VOID", "ALIEN", "GALAXY", "HEAVEN", "MAGMA", "FANTASY", "SPACE", "SPOOKY",
    "UPD24", "UPD23", "UPD22", "UPD21", "UPD20", "UPD19", "UPD18", "UPD17", "UPD16", "UPD15",
    "RELEASE", "TESTING", "BETA", "UPDATE2", "UPDATE3", "UPDATE4", "UPDATE5",
    "SECRETFREEPETCODE", "FREEPETCODE2", "FREEPETCODE123", "SECRETCODE",
    "LIKES100K", "LIKES150K", "LIKES200K", "LIKES250K"
}

CodesSection:Button({
    Title = "Redeem All Codes",
    Description = "Redeems all " .. #workingCodes .. " codes",
    Callback = function()
        task.spawn(function()
            local redeemed = 0
            for _, code in ipairs(workingCodes) do
                local success = pcall(function()
                    local event = getEvent(8)
                    if event then
                        event:FireServer(code)
                        redeemed = redeemed + 1
                    end
                end)
                task.wait(0.3)
            end
            Library:Notify({
                Title = "Codes Redeemed",
                Content = "Successfully redeemed " .. redeemed .. " codes!",
                Duration = 5
            })
        end)
    end
})

local RewardsSection = Tabs.Misc:AddSection("Auto Claim Rewards")

RewardsSection:Toggle("AutoClaimDaily", {
    Title = "Auto Claim Daily Rewards",
    Description = "Automatically claims daily rewards every 60 seconds",
    Default = false,
    Callback = function(Value)
        autoClaimDailyEnabled = Value
        if Value then
            task.spawn(function()
                while autoClaimDailyEnabled do
                    pcall(function()
                        local event = getEvent(20)
                        if event then
                            event:FireServer()
                        end
                    end)
                    task.wait(60)
                end
            end)
        end
    end
})

RewardsSection:Button({
    Title = "Claim All Achievements",
    Description = "Claims all available achievement rewards",
    Callback = function()
        task.spawn(function()
            for i = 1, 100 do
                pcall(function()
                    local event = getEvent(21)
                    if event then
                        event:FireServer(i)
                    end
                end)
                task.wait(0.2)
            end
        end)
    end
})

local UtilitySection = Tabs.Misc:AddSection("Utilities")

UtilitySection:Toggle("AntiAFK", {
    Title = "Anti AFK",
    Description = "Prevents you from being kicked for inactivity",
    Default = true,
    Callback = function(Value)
        if Value then
            local VirtualUser = game:GetService("VirtualUser")
            game:GetService("Players").LocalPlayer.Idled:Connect(function()
                VirtualUser:CaptureController()
                VirtualUser:ClickButton2(Vector2.new())
            end)
        end
    end
})

UtilitySection:Button({
    Title = "Rejoin Server",
    Description = "Rejoins current server",
    Callback = function()
        game:GetService("TeleportService"):TeleportToPlaceInstance(game.PlaceId, game.JobId, LocalPlayer)
    end
})

UtilitySection:Button({
    Title = "Server Hop",
    Description = "Joins a different server",
    Callback = function()
        local TeleportService = game:GetService("TeleportService")
        local HttpService = game:GetService("HttpService")

        local servers = {}
        local req = HttpService:JSONDecode(game:HttpGet("https://games.roblox.com/v1/games/" .. game.PlaceId .. "/servers/Public?sortOrder=Asc&limit=100"))

        for _, server in ipairs(req.data) do
            if server.playing < server.maxPlayers and server.id ~= game.JobId then
                table.insert(servers, server)
            end
        end

        if #servers > 0 then
            TeleportService:TeleportToPlaceInstance(game.PlaceId, servers[math.random(1, #servers)].id, LocalPlayer)
        end
    end
})

Window:SelectTab(1)

Library:Notify({
    Title = "Aurora Hub Loaded",
    Content = "Tapping Simulator script loaded successfully!",
    Duration = 5
})
